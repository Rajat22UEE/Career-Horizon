{
  "name": "career-horizon",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "frontend",
    "admin",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:admin": "npm --workspace admin run dev",
    "dev:backend": "npm --workspace backend run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:admin\" \"npm run dev:backend\"",
    "build:frontend": "npm --workspace frontend run build",
    "build:admin": "npm --workspace admin run build",
    "build:backend": "npm --workspace backend run build",
    "build": "npm run build:frontend && npm run build:admin && npm run build:backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
